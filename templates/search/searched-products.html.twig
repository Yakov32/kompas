{% extends 'base.html.twig' %}

{% block sidebar %}
    <nav id="sidebar">
        {% include 'blocks/_filter.html.twig' %}
    </nav>
{% endblock %}
{% block page_content %}
    <h2>{{ products |length }} товара</h2>

    <div class="row">
        {% for product in products %}
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="card mb-4">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                        <a href="/product/{{ product.id }}"><img src="/assets/images/{{ product.imgPath }}" class="img" width=100% height="270"/></a>
                        <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <div class="btn-group shadow-0" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-outline-secondary" data-mdb-color="dark">
                                <a href="#">{{ product.price }}&#8381</a>
                            </button>
                            <div></div>
                            <button type="button" class="btn btn-outline-secondary" data-mdb-color="dark">
                                <a href="#"><i class="fa fa-heart-o text-danger" aria-hidden="true"></i><span class="p-1">1</span></a>
                            </button>
                            <div></div>
                            <button type="button" class="btn btn-outline-secondary" data-mdb-color="dark">
                                Купить
                            </button>

                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}

