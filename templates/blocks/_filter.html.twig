{% block filter %}
        <div class="filter">
            <div class="sidebar-header">
                <h3>Фильтр</h3>
            </div>
            <form class="p-3" action="{{ path('search_filter') }}" method="get">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="filter[in_stock]" id="exampleRadios1" value=true checked>
                    <label class="form-check-label" for="exampleRadios1">
                        В наличии
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="filter[in_order]" id="exampleRadios2" value=true>
                    <label class="form-check-label" for="exampleRadios2">
                        Под заказ
                    </label>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Цена От</label>
                    <input type="number" class="form-control" name="filter[price_min]" value="1" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="1">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Цена До</label>
                    <input type="number" class="form-control" name="filter[price_max]" value="99999" id="exampleInputPassword1" placeholder="99999">
                </div>
                <button type="submit" class="btn btn-success mt-3">Показать</button>
            </form>
        </div>
{% endblock %}